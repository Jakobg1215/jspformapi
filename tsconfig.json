{
    "compilerOptions": {
        "incremental": true,
        "target": "es2020",
        "module": "commonjs",
        "lib": [
            "es2020",
            "ESNext"
        ],
        "allowJs": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./",
        "composite": true,
        "isolatedModules": true,
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "pretty": true,
        "paths": {
            "src": [
                "./src"
            ]
        }
    }
}